{
  "name": "phoenixnowwebfrontend",
  "version": "1.0.0",
  "description": "Web frontend for Phoenix Now signin service",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*; rimraf js/bundle.js",
    "compile": "browserify -t [ riotify --type es6 ] js/app.js -o js/bundle.js",
    "production": "cp *.html dist/; mkdir dist/js; browserify -t [ riotify --type es6 ] js/app.js -o dist/js/bundle.js",
    "watch": "watchify -t [ riotify --type es6 ] js/app.js -o js/bundle.js",
    "browsersync": "browser-sync start --server --files 'js/*.js, ./*.html'",
    "serve": "parallelshell 'npm run watch' 'npm run browsersync'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Nicholas Day",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "browserify": "^13.0.0",
    "riot": "^2.3.16",
    "superagent": "^1.8.0-beta.2"
  },
  "devDependencies": {
    "babel": "^5.8",
    "browser-sync": "^2.11.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.2",
    "riotify": "^1.0.0",
    "watchify": "^3.7.0"
  }
}
