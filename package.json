{
  "name": "phoenixnowwebfrontend",
  "version": "1.0.0",
  "description": "Web frontend for Phoenix Now signin service",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "compile": "browserify -t [ riotify --type es6 ] app/app.js -o dist/app.js",
    "watch": "watchify -t [ riotify --type es6 ] app/app.js -o dist/app.js",
    "browsersync": "browser-sync start --server --files 'dist/*.js, app/*.html' --startPath app",
    "serve": "parallelshell 'npm run watch' 'npm run browsersync'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Nicholas Day",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "browserify": "^13.0.0",
    "riot": "^2.3.16",
    "riotify": "^1.0.0",
    "superagent": "^1.8.0-beta.2",
    "watchify": "^3.7.0"
  },
  "devDependencies": {
    "babel": "^5.8",
    "babel-core": "^6.6.4",
    "babel-preset-es2015-riot": "^1.0.3",
    "browser-sync": "^2.11.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.5.2"
  }
}
