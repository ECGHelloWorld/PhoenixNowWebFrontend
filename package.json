{
  "name": "phoenixnowwebfrontend",
  "version": "1.0.0",
  "description": "Web frontend for Phoenix Now signin service",
  "main": "index.js",
  "scripts": {
    "clean": "rm dist/*",
    "compile": "cp *.html dist/; browserify -t [ riotify --type es6 ] js/app.js -o dist/app.js",
    "watch": "watchify -t [ riotify --type es6 ] js/app.js -o dist/app.js",
    "browsersync": "browser-sync start --server --files 'dist/*.js, ./*.html'",
    "serve": "parallelshell 'npm run watch' 'npm run browsersync'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Nicholas Day",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "browserify": "^13.0.0",
    "riot": "^2.3.16",
    "superagent": "^1.8.0-beta.2"
  },
  "devDependencies": {
    "watchify": "^3.7.0",
    "riotify": "^1.0.0",
    "babel": "^5.8",
    "browser-sync": "^2.11.1",
    "parallelshell": "^2.0.0"
  }
}
